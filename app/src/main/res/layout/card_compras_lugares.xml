<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_lugares"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10px"
    android:background="@drawable/fondo_morado"
    android:elevation="1dp"
    android:orientation="vertical"
    android:padding="10px">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lugaresComprasLayout">
        <TextView
            android:id="@+id/nombreLugar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="10px"
            android:layout_marginLeft="10px"
            android:paddingLeft="10px"
            android:text="Nombre del lugar"
            android:textSize="14sp"
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/ubicacionLugar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/nombreLugar"
            android:layout_margin="10px"
            android:layout_marginLeft="10px"
            android:paddingLeft="10px"
            android:text="UbicaciÃ³n del lugar"
            android:textColor="@color/colorList"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/idLugar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/ubicacionLugar"
            android:layout_margin="10px"
            android:layout_marginLeft="10px"
            android:paddingLeft="10px"
            android:text="id del lugar"
            android:textSize="15sp"
            android:visibility="gone" />

    </RelativeLayout>

</RelativeLayout>